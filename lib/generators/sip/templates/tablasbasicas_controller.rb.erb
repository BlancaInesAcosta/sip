# encoding: UTF-8
module Sip
  module Admin
    class <%= nom_clase.pluralize %>Controller < Sip::Admin::BasicasController
      before_action :set_<%= nom_arch %>, 
        only: [:show, :edit, :update, :destroy]
      load_and_authorize_resource  class: Sip::<%= nom_clase %>

      def clase 
        "Sip::<%= nom_clase %>"
      end

      def set_<%= nom_arch %>
        @basica = <%= nom_clase %>.find(params[:id])
      end

      def atributos_index
        [
          "id", "nombre", "observaciones", "fechacreacion", 
          "fechadeshabilitacion"
        ]
      end

      def <%= nom_arch %>_params
        params.require(:<%= nom_arch %>).permit(*atributos_form)
      end

    end
  end
end
